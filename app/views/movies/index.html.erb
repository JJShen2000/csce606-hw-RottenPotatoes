<p style="color: green"><%= notice %></p>

<div class="container">
<h1>Movies</h1>

<table class="table">
  <thead>
    <tr>
      <%# % th=sortable("title") %>
      <th class="<%= column_class("title") %>"><%= sortable("title") %></th> 
      <th class="<%= column_class("rating") %>"><%= sortable("rating") %></th>
      <th class="<%= column_class("release_date") %>"><%= sortable("release_date", "Release Date", ) %></th>
      <th class="<%= column_class("action") %>">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
        <td>
          <%= link_to "Show", movie %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New movie", new_movie_path %>
</div>


